<link rel="stylesheet" href="/css/exercise/list.css" />

<div class="container">
  <div class="create">
    {{#each language}}
    <a href="/exercise/listLanguages"><button id="back" class="type">Regresar</button></a>
    <a href="/exercise/create/{{idLanguage}}"><button class="type">Crear ejercicio</button></a>
    {{/each}}
  </div>
  <div id="title">
    <h1>Ejercicios</h1>
  </div>
  <form action="/exercise/listExercises/{{idLanguage}}" method="get"></form>
  <div class="contents">
    {{#each listExercises}}
    <div id="data">
      <h3>{{nameExercise}}</h3>
      <div class="optionDetail">
        <a href="/exercise/detail/{{idExercise}}"><button id="detail" class="button">Detalle</button></a>
      </div>
      <div class="optionDelete">
        <a href="/exercise/remove/{{idExercise}}"><button id="delete" type="button"
            onclick="return confirm('¿Está seguro de eliminar este elemento?');">Eliminar</button></a>
      </div>
    </div>
    {{else}}
    <div class="message">
      <h2>No tiene ejercicios registrados</h2>
    </div>
    {{/each}}
  </div>
</div>