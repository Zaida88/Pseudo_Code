<link rel="stylesheet" href="/css/answer/list.css">

<form action="/answer/list/{{dUser}}" method="get"></form>
<div id="title">
    <h3>Respuestas</h3>
</div>
<div id="createAnswer">
    <a href="/answer/create/{{user.idUser}}">
        <button id="btnAdd" type="button">Agregar Respuesta</button>
    </a>
</div>
<div id="container">
    <div class="row">
        {{#each list}}
        <div id="card">
            <div id="nameAnswer">
                <p>{{nameAnswer}}</p>
                <div id="edit">
                    <a href="/answer/update/{{idAnswer}}">
                        <button type="button" id="btnEdit">Editar Prueba</button>
                    </a>
                </div>
                <div id="create">
                    <a href="/question/create/{{user.idUser}}">
                        <button type="button" id="btnCreate">Crear Pregunta</button>
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class='center-block frame text-center' id="content">
            <div class='card-body'>
                <h5 class='card-title'>
                    No tienes respuestas registradas actualmente.
                </h5>
                <p class='card-text'>
                    Desea agregar una.
                </p>
                {{/each}}
            </div>
        </div>
    </div>