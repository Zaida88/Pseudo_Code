<link rel="stylesheet" href="/CSS/clasificacion.css" />

<form action="/classification/add/{{user.idusuario}}" method="post">
   <div class="fondo">
    <div class="contenido contenido--small">
        <div class="titulo"><b>Nueva clasificacion</b></div><br>
        <div class="conten" id="contenido">
            <div class="contenido__nombre" id="nombre">
                <label class="label-nombre">Nombre de clasificacion</label>
                <input class="input" type="text" name="nameClassification" id="nameClassification" checked
                    aria-checked="true" />
            </div>

            <div class="contenido__nombre" id="nombre">
                <label class="label-nombre">Descpcion</label>
                <input class="input" type="text" name="descriptionClassification" id="descriptionClassification" checked
                    aria-checked="true" />
            </div>

            <div class="contenido__nombre" id="nombre">
                <label class="label-nombre">imagen</label>
                <input class="input" type="img" name="imageClassification" id="imageClassification" checked
                    aria-checked="true" />
            </div>

            <div id="guardar">
                <button class="boton" type="submit"><b>Guardar</b></button>
            </div>
        </div>
    </div>
    </div>
</form>

<script src="/JS/objetivos.js"></script>