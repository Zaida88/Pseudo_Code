<link rel="stylesheet"  href="/CSS/clasificacion.css" />

<form action="/language/list/{{user.iduser}}" method="get"></form>
<div class="contenedor" id="contenedor">
  {{#each list}}
  <div class="contenedor__contenido">
    <div class="nombre" id="nombre">
      <h1>{{nameLanguage}}</h1>
    </div>
    <div class="contenedor__contenido">
    <div class="nombre" id="nombre">
      <h1>{{descriptionLanguage}}</h1>
    </div>
    <div class="contenedor__contenido">
    <div class="nombre" id="nombre">
      <h1>{{imageLanguage}}</h1>
    </div>
    <div id="editar"> 
      <a href="/language/edit/{{idLanguage}}"><button class="boton"><b>Editar</b></button></a>
    </div>
    <div class="codificacion" id="codificacion">
      <a href="/language/add/{{idLanguage}}"><button class="boton"><b>Agregar lenguaje</b></button></a>
    </div>
  </div>
  {{else}}
  <div class="mensaje">
    <h2>No tiene ningun lenguaje</h2>
    <h3>Â¿Desea agregar?</h3>
    <a href="/language/add/{{user.iduser}}"><button class="boton"><b>Agregar</b></button></a>
  </div>
  {{/each}}
</div>