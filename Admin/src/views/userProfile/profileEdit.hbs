<link rel="stylesheet" href="/css/profileEdit.css">
<div class="backGround" id="backGround">
  .
</div>
<center>
  <h1 class="title">Editar perfil</h1>
</center>


{{#each User}}
<div class="userPhoto">
  <button type="" class="profileUser" id="lose-open">
    <div class="photoIconPrimary">
      <div class="photoIcon">
        <img src="/img/user/{{photo}}" id="imageview" alt="default img">
      </div>
      <div class="photoIcon Icon">
        <img src="/img/user/Icon.png" alt="" height="200px" width="200px">
      </div>
    </div>
  </button>

</div>





<form action="/userProfile/profileEdit/{{idUser}}" method="post">

  <div class="profileUser">
    <div class="profileTwo " id="profileTwo">

      <div class="changeImage">

        <img src="/img/user/{{photo}}" id="imagePreview" alt="default img">
        <div class="changeImage">
          <input type="file" name="photo" id="filePicker" accept="image/*">
        </div>

      </div>
      <div class="buttonsView">
        <div class="toEditTree">

          <button id="editar" type="submit">Guardar</button>

        </div>
</form>
<div class="toEditTree">
  <button id="cancel" type="button">Cancelar</button>
</div>
</div>
</div>


<form action="/userProfile/profileEdit/{{idUser}}" method="post">

  <table class="userData">


    <tr>

      <td class="borderTableTitle">
        <p>Usuario</p>
      </td>

      <td><input type="text" name="username" class="texting" value="{{username}}"> </td>



    </tr>

    <tr>
      <td class="borderTableTitle">
        <p>Nombre</p>
      </td>

      <td><input type="text" name="firstName" class="texting" value="{{firstName}}"></td>


    </tr>
    <tr>
      <td class="borderTableTitle">
        <p>Apellido</p>
      </td>
      <td><input type="text" name="lastName" class="texting" value="{{lastName}}"></td>
    </tr>
    <tr>
      <td class="borderTableTitle">
        <p>Correo</p>
      </td>

      <td><input type="text" name="email" class="texting" value="{{email}}"></td>



    </tr>





    <div class="toEditOne">
      <center>

        <button id="editar" type="submit">Guardar</button>
    </div>
</form>
{{/each}}
</table>

</div>

</div>
</div>
<script src="/js/preview.js"></script>
<script src="/js/profile.js"></script>