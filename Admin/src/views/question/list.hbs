<link rel="stylesheet" href="/css/question/list.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<form action="/question/list" method="get"></form>
<div id="createQuestion">
    <a href="/answer/create/{{idTests}}">
        <button id="btnAdd" type="button">Agregar Pregunta</button>
    </a>
</div>
<div id="miniContainer">
    <div id="elementsTitle">
        <div id="sideOne">
            <p id="blacked">Pregunta</p>
        </div>
        <div id="sideTwo">
            <p id="blacked">Ver</p>
            <p id="blacked">Eliminar</p>
        </div>
    </div>
</div>
<div id="containerIterator">
    {{#each list}}
    <div id="elementContainer">
        <div id="description">
            <p>Pregunta 1</p>
        </div>
        <div id="actions">
            <div id="edit">
                <button class="btn" id="icon" onclick="location.href='/question/update/{{idQuestions}}'"><i
                        class="fa fa-eye"></i></button>
            </div>
            <div id="edit">
                <button class="btn" id="icon" onclick="location.href='/question/update/{{idQuestions}}'"><i
                        class="fa fa-trash"></i></button>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}

<div class="center-block frame text-center" id="content">
    <div class="card-body">
        <h5 class="card-title">
            No tienes preguntas registradas actualmente.
        </h5>
        <p class="card-text">
            Deseas agregar una.
        </p>
        {{/each}}
        <div class="text-center">
            <a href="answer/create/{{idAnswer}}">
                <button class="btn btn-primary button" id="button">
                    <b>Agregar Pregunta</b>
                </button>
            </a>
        </div>
    </div>
</div>