<link rel="stylesheet" href="/css/test/create.css">

<form action="/test/create/{{user.idUser}}" method="post">
    <div id="title">
        <p>Nueva Prueba</p>
    </div>
    <div id="container">
        <div id="textGroup">
            <div class="inputText">
                <label>Nombre</label>
                <input type="text" name="nameTest" id="textElement" required aria-checked="true" />
            </div>
            <div class="inputText">      
                <label>Descripcion</label>
                <textarea name="descriptionTest" id="textElement" required aria-checked="true"></textarea>
                </textarea>
            </div>
        </div>
        <div id="buttonGroup"> 
            <div id="button">
                <button type="submit" id="buttonCancel">Cancelar</button>
            </div>
            <div id="button">
                <button type="submit" id="btnCreate">Crear</button>
            </div>
        </div>
    </div>
</form>