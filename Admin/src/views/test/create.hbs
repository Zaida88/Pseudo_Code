<link rel="stylesheet" href="/css/test/create.css">

<form action="/tests/create/{{user.idUser}}" method="post">
 <div id="container">
    <div id="title">
        <p>Nueva Prueba</p>
    </div>
    <div id="nameTests">
        <label>Nombre:</label>
        <input type="text" name="nameTests" id="" required aria-checked="true">
    </div>
    <div id="descriptionTests">
        <label>Descripcion</label>
        <textarea name="descriptionTests" id="" required aria-checked="true"></textarea>
    </div>
    <div id="button">
        <button type="submit">Crear</button>
    </div>
    <div id="button_cancel">
        <button type="submit">Cancelar</button>
    </div>
 </div>
</form>