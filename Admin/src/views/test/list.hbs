<link rel="stylesheet" href="/css/test/list.css">

<form action="/test/list/{{user.idUser}}" method="get"></form>
<div id="title">
    <h3>Prueba</h3>
</div>
<div id="createTest">
    <a href="/answer/create/{{user.idUser}}">
        <button id="btnAdd" type="button">Agregar Prueba</button>
    </a>
</div>
<div id="container">
    <div class="row">
        {{#each list}}
        <div id="card">
            <div id="id">
                <p>{{idTest}}</p>
            </div>
            <div id="name">
                <p>{{nameTest}}</p>
            </div>
            <div id="description">
                <p>{{descriptionTest}}</p>
            </div>

            <div id="edit">
                <a href="/test/update/{{idTest}}">
                    <button type="button" id="btnEdit">Editar Prueba</button>
                </a>
            </div>
        </div>
        {{else}}
        {{/each}}
    </div>
</div>

 