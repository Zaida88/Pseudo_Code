<link rel="stylesheet" href="/css/test/list.css">

<form action="/test/list/{{user.idUser}}" method="get"></form>
<div id="title">
    <h3>Prueba</h3>
</div>
<div id="createTest">
    <a href="/test/create/{{user.idUser}}">
        <button id="btnAdd" type="button">Agregar Prueba</button>
    </a>
</div>
<div id="container">
    <div class="row">
        {{#each list}}
        <div id="card">
            <div id="name">
                <p>{{nameTest}}</p>
            </div>
            <div id="description">
                <p>{{descriptionTest}}</p>
            </div>

            <div id="edit">
                    <button class="btn" onclick="location.href='/question/update/{{idQuestion}}'"><img
                            src="https://cdn-icons-png.flaticon.com/512/3597/3597075.png" height="25"
                            width="25" /></button>
                </div>
             <div id="create">
                <a href="/question/create/{{user.idUser}}">
                    <button type="button" id="btnCreate">Crear Pregunta</button>
                </a>
            </div>
        </div>
       {{else}}

    <div class='center-block frame text-center' id="content">
        <div class='card-body'>
            <h5 class='card-title'>
                No tienes pruebas registradas actualmente.
            </h5>
            <p class='card-text'>
                Desea agregar una.
            </p>
            <div class="text-center">
                <a href="/test/create/{{user.idUser}}">
                    <button class='btn btn-primary button' id="button">
                        <b>Agregar Prueba</b>
                    </button>
                {{/each}}
                </a>
            </div>
        </div>
    </div>
</div>
<script src="/views/test/hidden.test.js"></script>