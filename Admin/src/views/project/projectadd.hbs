<link rel="stylesheet" href="/CSS/project.css" />
<form action="project/projectadd" method="post">
  <div>
    <div>
      <div>
        {{#each max}}
        <input type="text" name="idproject" id="idProject"
          value="{{'max(idProject)'}}" readonly />
        {{/each}}
      </div>
      <div class="title"><b>New Project</b></div><br>
      <div id="name">
        <label class="label">Nombre de proyecto:</label><br>
        <input class="textarea" type="text" name="name" id="name" checked aria-checked="true" />
      </div>
      <div id="description">
        <label class="label">description:</label><br>
        <textarea class="textarea" type="text" name="description" id="description" checked
          aria-checked="true"></textarea>
      </div>
      <div id="logo">
        <label class="label">LOGO</label><br>
        <textarea class="textarea" type="text" name="logo" id="logo" checked
          aria-checked="true"></textarea>
      </div>
      <div id="mission">
        <label class="label">Mision:</label><br>
        <textarea class="textarea" type="text" name="mission" id="mission" checked aria-checked="true"></textarea>
      </div>
      <div id="vision">
        <label class="label">Vision:</label><br>
        <textarea class="textarea" type="text" name="vision" id="vision" checked aria-checked="true"></textarea>
      </div>
      <div id="objetive">
        <label class="label"> Objetivos:</label><br>
        <textarea class="textarea" type="text" id="numbers" name="numbers" ></textarea><br><br>
        <button class=" buton" type="button" onclick="objetives.create()"><b>Crear objetivos</b></button>
      </div>
      <div id="listObjetive"></div>
      <div id="guardar">
        <button class="boton boton--mit" type="submit"><b>Guardar</b></button>
      </div>
    </div>
  </div>
</form>

<div id="next">
  <form action="/project/list/{{user.idUser}}" method="get">
    <button class="boton boton--mitad-oculto" type="submit">Ver proyectos registrados</button>
  </form>
</div>