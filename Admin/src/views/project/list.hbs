<link rel='stylesheet' href='/CSS/project.css' />
<div class="formsProject">
    <div class='containerCreate'>
        <form action="/project/list/{{user.idUser}}" method='get'></form>
            <div id="title" class="title text-center">
                <h1>PROYECTO</h1>
            </div>

            {{#each list}}
            <form>
            <div id="list-form" class="userDetail">
                <div id="name" class="inputBox">
                    <label>Nombre proyecto:</label>
                    <textarea>{{nameProject}}</textarea>
                </div>

                <div id="description" class="inputBox">
                    <label>Descripcion:</label>
                    <textarea>{{descriptionProject}}</textarea>
                </div>

                <div id="mission" class="inputBox">
                    <label>Mision:</label>
                    <textarea>{{mission}}</textarea>
                </div>

                <div id="vision" class="inputBox">
                    <label>Vision:</label>
                    <textarea>{{vision}}</textarea>
                </div>
                {{#each listObjetive}}
                <div id="Objetives" class="inputBox">
                    <label>Objetivos:</label>
                    <textarea>{{objective}}</textarea>
                </div>
                {{/each}}
                <div id="logo" class="logo">
                    <label>Logo:</label> <br>
                    <div id="changeImage">
                        <img src="/img/user/{{logoProject}}" id="image" />
                    </div>
                </div>
                <div class="inputBox">
                    <div></div>
                </div>
                <div id='edit' class="form-group col">
                    <a href="/project/update/{{idProject}}">
                        <button type='button' class='btn btn-primary button'>
                            Editar
                        </button>
                    </a>
                </div>
            </div>
            </form>
        
    </div>
</div>
<div class="container">
    {{else}}

    <div class="frame" id="content">
        <div>
            <h5>
                No tienes proyectos registrados actualmente.
            </h5>
            <p>
                Desea agregar uno.
            </p>

            {{/each}}
            <div class="text-center">
                <a href="/project/create/{{idProject}}">
                    <button class='button' id="button">
                        <b>Agregar proyecto</b>
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>

<script src="/js/project/hidden.project.js"></script>
