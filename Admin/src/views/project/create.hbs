<link rel="stylesheet" href="/CSS/project.css">
<div class="formsProject">
    <div class="containerCreate">
        <form action="/project/create/" method="post">
            {{#each max}}
            <input class="none" type="text" name="idProject" id="idProject" value="{{'max(iProject)'}}" readonly />
            {{/each}}
            <div id="title" class="title">
                <h1>NUEVO PROYECTO</h1>
            </div>
            <div id="create" class="userDetail">
                <div id="name" class="inputBox">
                    <span>Nombre:</span>
                    <input type="text" name="nameProject" id="nameProject" required aria-checked="true"
                        placeholder="Ingresa el Nombre">
                </div>

                <div id="description" class="inputBox">
                    <label>Descripcion:</label>
                    <textarea placeholder="Ingresa la descripcion" name="descriptionProject" id="descriptionProject"
                        required aria-checked="true"></textarea>
                </div>

                <div id="mission" class="inputBox">
                    <label>Mision:</label>
                    <textarea placeholder="Ingresa la mision" name="mission" id="mission" required
                        aria-checked="true"></textarea>
                </div>

                <div id="vision" class="inputBox">
                    <label>Vision:</label>
                    <textarea placeholder="Ingresa la vision" name="vision" id="vision" required
                        aria-checked="true"></textarea>
                </div>
                
                <div id="logo" class="logo">
                    <label>Logo:</label>
                    <div id="changeImage">
                        <img src="/img/NoImage.jpg" id="imagePreview">
                    </div>
                    <div class="file" id="file">
                        <input type="file" name="logoProject" id="filePicker" accept="image/*" required>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="iborrainputfile" width="20" height="17"
                        viewBox="0 0 20 17">
                        <path
                            d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z">
                        </path>
                    </svg>
                </div>

                <div id="save">
                    <button type="submit" class="button">Crear</button>
                </div>
            </div>
        </form>
        <form action="/project/list/{{user.idUser}}" method="get">
            <div id="next">
                <button class="button" type="submit">Cancelar</button>
            </div>
        </form>

    </div>
</div>
<script src="/js/project/logo.project.js"></script>
<script src="/js/project/objective.project.js"></script>
