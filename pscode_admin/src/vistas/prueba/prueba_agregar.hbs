<form action="/prueba/agregar/{{user.idusuario}}" method="post">
  <div id="nombre">
    <label for="">Nombre prueba</label>
    <input type="text" name="nombre" id="nombre" required />
  </div>
  <div>
    <label for="">Descripcion</label>
    <textarea type="text" name="descripcion" id="descripcion" required maxlength="2500"></textarea>
  </div>
  <div id="objetivos">
    <label>Preguntas:</label>
    <input type="text" id="numeros" />
    <button type="button" onclick="objetivos.crear()">-></button>
  </div>
  <div>
      <button type="submit">Guardar</button>
  </div>
</form>
<script src="/JS/objetivos.js"></script>