<link rel="stylesheet" href="/CSS/prueba_agregar.css" />

<form action="/prueba/lista_completa/{{user.idusuario}}" method="get">
    <div id="contenido" class="contenedor__contenido">
            {{#each lista1}}
            <div id="Nombre">
                <h1>Nombre:</h1>
                <label for="">{{nombre}}</label>
            </div>
            <div id="Descripcion">
                <h1>Descripcion:</h1>
                <label for="">{{descripcion}}</label>
            </div>
            <div id="Editar">
                <a href="/prueba/editar/{{idPruebas}}"><button type="button" class="boton mx-auto" >Editar</button></a>
            </div>
            {{/each}}
            {{#each lista2}}
            <div id="Preguntas">
                <h1>Preguntas:</h1>
                <label for="">{{preguntas}}</label>
            </div>
            {{/each}}
            {{#each lista3}}
            <div id="Respuestas">
                <h1>Respuestas: </h1>
                <label for="">{{respuesta }}</label>
            </div>
             {{/each}}
    </div>
</form>