<link rel="stylesheet" href="/CSS/clasificacion.css" />
 <form action="/codificacion/editar/{{user.idusuario}}" method="post">
    <div class="fondo">
    <div class="contenido"  id="contenido">
        {{#each lista}}
        <div>
            <input class="input input--oculto" type="text" name="idcodificacion" id="codigo" checked aria-checked="true" value="{{idcodificacion}}">
        </div>
        <h1 class="titulo">Editar Codificacion</h1>
        <div class="nombre" id="nombre">
            <label class="label-nombre">Nombre</label><br>
            <input class="input" type="text" name="nombre" id="nombre" checked aria-checked="true" value="{{nombre}}"/>
        </div>
        <div class="" id="descripcion">
            <label class="label-nombre">Descripcion</label>
            <input class="input input--more-height" type="text" name="descripcion" id="descripcion_css" checked aria-checked="true" value="{{descripcion}}"/>
        </div>
        {{/each}}
        <div id="guardar">
            <button  class="boton" type="submit">Guardar</button>
        </div>
    </div>
    </div>
</form>