<link rel="stylesheet" href="" />
 <form action="/codificacion/editar/{{user.idusuario}}" method="post">
    <div id="contenido">
        {{#each lista}}
        <div>
            <input type="text" name="idcodificacion" id="codigo" checked aria-checked="true" value="{{idcodificacion}}">
        </div>
        <div id="nombre">
            <label>Nombre</label>
            <input type="text" name="nombre" id="nombre" checked aria-checked="true" value="{{nombre}}"/>
        </div>
        <div id="descripcion">
            <label>Descripcion</label>
            <input type="text" name="descripcion" id="descripcion_css" checked aria-checked="true" value="{{descripcion}}"/>
        </div>
        {{/each}}
        <div id="guardar">
            <button type="submit">Guardar</button>
        </div>
    </div>
</form>