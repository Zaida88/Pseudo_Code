<link rel="stylesheet" href="/CSS/proyecto.css" />

<form action="/proyecto/agregar/" method="post">
  <div id="contenido">
    <div>
      {{#each max}}
      <input type="text" name="idproyecto" id="idproyecto" value="{{'max(iddatosproyecto)'}}" readonly />
      {{/each}}
    </div>
    <div id="nombre_pro">
      <label>Nombre de proyecto:</label><br>
      <input type="text" name="nombre_pro" id="proyecto" checked aria-checked="true" />
    </div>
    <div id="descripcion">
      <label>Descripcion:</label><br>
      <textarea type="text" name="descripcion" id="descripcion_css" checked aria-checked="true"></textarea>
    </div>
    <div id="mision">
      <label>Mision:</label><br>
      <textarea type="text" name="mision" id="mision_css" checked aria-checked="true"></textarea>
    </div>
    <div id="vision">
      <label>Vision:</label><br>
      <textarea type="text" name="vision" id="vision_css" checked aria-checked="true"></textarea>
    </div>
    <div id="objetivos">
      <label>Objetivos:</label><br>
      <input type="text" id="numeros" name="numeros" /><br><br>
      <button type="button" onclick="objetivos.crear()">Crear objetivos</button>
    </div>
    <div id="listaObjetivos"></div>
    <div id="Unico">
      <textarea name="unico" id="unico" maxlength="2500"></textarea>
    </div>
    <br><div id="guardar">
      <button type="submit">Guardar</button>
    </div>
  </div>
</form>

<div id="Siguiente">
  <form action="/proyecto/listar/{{user.idusuario}}" method="get">
    <button type="submit">Ver proyectos registrados</button>
  </form>
</div>
<script src="/JS/numero.js"></script>
<script src="/JS/objetivos.js"></script>