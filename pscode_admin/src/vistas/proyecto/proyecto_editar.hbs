<link rel="stylesheet" href="/CSS/proyecto.css" />
<script src="/JS/objetivos.js"></script>


{{#each lista}}
 <form action="/proyecto/editar/{{iddatosproyecto}}" method="post">
{{/each}}
<div class="fondo">
    <div class="contenido" id="contenido">
        {{#each lista}}
            <label class="titulo">Editar proyecto</label>
        <div id="nombre_pro">
            <label class="label">Nombre de proyecto</label>
            <input class="input" value="{{nombre_pro}}" type="text" name="nombre_pro" id="proyecto" checked aria-checked="true" />
        </div>
        <div id="descripcion">
            <label class="label">Descripcion</label>
            <input class="input" type="text" name="descripcion" id="descripcion_css" checked aria-checked="true" value="{{descripcion}}"/>
        </div>
        <div id="mision">
            <label class="label">Mision</label>
            <input class="input" type="text" name="mision" id="mision_css" checked aria-checked="true" value="{{mision}}"/>
        </div>
        <div id="vision">
            <label class="label">Vision</label>
            <input  class="input" type="text" name="vision" id="vision_css" checked aria-checked="true" value="{{vision}}"/>
        </div>
        {{/each}}
        <div id="objetivos">
            <label class="label">Objetivos:</label>
            {{#each listaObjetivos}}
             <input class="input" type="text" id="numeros" name="objetivos" checked value="{{objetivos}}"/>
            {{/each}}
        </div>
        <div id="guardar">
            <button class="boton boton--mitad" type="submit">Guardar</button>
        </div>
    </div>
    </div>
</form>