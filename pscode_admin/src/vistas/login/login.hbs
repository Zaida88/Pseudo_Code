<LINK REL=StyleSheet HREF="/css/ingreso.css" TYPE="text/css" MEDIA=screen>
{{#each usuario}}
<form action="/login/{{idusuario}}" method="POST" id="ingresar">
<div id="imagen">
</div>
  <div id="contenedor">
    <div class="imagen__logo">
      <img src="/IMG/logo-icon.png" alt="">
    </div>
    <div id="login">
      Login
    </div>
    <div id="datos">
      <input type="text" id="Nombre" name="username" value="{{username}}" placeholder="Usuario:">
    </div>
    {{/each}}
    <div id="contraseñas">
      <input type="password" id="password" name="password" placeholder="Contraseña:">
    </div>
    <div>
      <button type="submit" id="boton">Ingresar</button>
    </div>
    <div id="sesion">
     <a href="/Registro"><button type="button">Registro</button></a>
    </div>
  </div>
</form>