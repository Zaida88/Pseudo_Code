<link rel="stylesheet"  href="/CSS/clasificacion.css" />

<form action="/clasificacion/listar/{{user.idusuario}}" method="get"></form>
<div class="contenedor" id="contenedor">
  {{#each lista}}
  <div class="contenedor__contenido">
    <div class="nombre" id="nombre">
      <h1>{{nombre_clasificacion}}</h1>
    </div>
    <div id="editar"> 
      <a href="/clasificacion/editar/{{idclasificacion}}"><button class="boton"><b>Editar</b></button></a>
    </div>
    <div class="codificacion" id="codificacion">
      <a href="/codificacion/agregar/{{idclasificacion}}"><button class="boton"><b>Agregar lenguaje</b></button></a>
    </div>
  </div>
  {{else}}
  <div class="mensaje">
    <h2>No tiene ninguna clasificacion</h2>
    <h3>Â¿Desea agregar?</h3>
    <a href="/clasificacion/agregar/{{user.idusuario}}"><button class="boton"><b>Agregar</b></button></a>
  </div>
  {{/each}}
</div>